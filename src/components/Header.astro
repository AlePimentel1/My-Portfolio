---
interface Props {
    sections: {
        id: string;
        title: string;
    }[];
}
const { sections } = Astro.props;
---

<header class="fixed top-6 flex justify-center items-center py-2 px-4 bg-gray-600 rounded-full z-10">
    <nav>
        <ul class="flex flex-row gap-5 text-white">
            {
                sections.map((section: any) => (
                    <li>
                        <a class="hover:text-black uppercase text-sm" href={`#${section.id}`}>
                            {section.title}
                        </a>
                    </li>
                ))
            }
        </ul>
    </nav>
</header>
